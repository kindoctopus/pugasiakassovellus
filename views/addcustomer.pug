doctype html
html
  head
    title Add customer
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body
    div.container
      h1.font-monospace New customer
      form(action='/addcustomer', method='POST')
        div.mb-3
          label.form-label Firstname
          input(type="text", name="firstname").form-control
        div.mb-3
          label.form-label Lastname
          input(type="text", name="lastname").form-control
        div.mb-3
          label.form-label Email
          input(type="text", name="email").form-control
        div.mb-3
          label.form-label Phone
          input(type="number", name="phone").form-control
        div.mb-3
          input(type="submit", value="Add").btn.btn-primary